# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys
GROQ_API_KEY=your_groq_api_key_here

# Contentstack Configuration
CONTENTSTACK_API_KEY=your_contentstack_api_key_here
CONTENTSTACK_DELIVERY_TOKEN=your_contentstack_delivery_token_here
CONTENTSTACK_ENVIRONMENT=development
CONTENTSTACK_REGION=us

# Redis Configuration (optional - falls back to memory cache)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
MEMORY_CACHE_MAX_ITEMS=1000

# Content Search Configuration
CONTENT_SEARCH_LIMIT=10
CONTENT_RELEVANCE_THRESHOLD=0.3
ENABLE_SEMANTIC_SEARCH=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info